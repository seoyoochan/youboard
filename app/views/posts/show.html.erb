<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>


<p>
  <strong>Board:</strong>
  <%= @post.board.name %>
</p>

<p>
  <strong>댓글작성</strong>
  <%= render partial: "comments/form" if signed_in? %>
</p>

<p>
  <strong>댓글</strong><br/><br/>
  <ul id="comment_list">
  <%= render partial: "comments/comment", collection: @post.root_comments.order("updated_at DESC") %>
  </ul>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
